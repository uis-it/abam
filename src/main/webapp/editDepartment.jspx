
<f:view 
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:ice="http://www.icesoft.com/icefaces/component">
	<f:loadBundle basename="Language" var="msgs" />
	<ice:portlet>
		<ice:form partialSubmit="true" >
			<ice:outputText value="Edit department"/><br/>
			<br/>
			<br/>
			
			<ice:dataTable id="departmentTable" var="item" value="#{employeeService.departmentList}">
				<ice:column>
					<f:facet name="header">
						<ice:outputText value="Department name:"/>
					</f:facet>
					<ice:outputText id="itemName" value="#{item.label}" rendered="#{!item.editable}"/>
					<ice:inputText id="itemNameInput" value="#{item.label}" rendered="#{item.editable}"/>
					<ice:commandButton id="setEditable" value="Edit row" actionListener="#{editBean.actionSetEditable}" rendered="#{!empty item.label}"/>
					<ice:commandButton id="remove" value="Remove" actionListener="#{editBean.actionRemoveDepartment}" rendered="#{!empty item.label}"/>
				</ice:column>
			</ice:dataTable>
			<ice:commandButton id="addNewRow" value="Add row" actionListener="#{editBean.actionAddNewDepartment}"/>
			<table border="0">
				<tr>
					<td></td><td></td>
					<td><ice:commandButton type="submit" action="editInformation" value="Back" id="BackButton" immediate="true"/></td>
					<td><ice:commandButton type="submit" value="Save" id="SaveButton" action="editInformation" immediate="true" actionListener="#{editBean.actionSaveDepartmentListToWebService}"/></td>
				</tr>
			</table>
		</ice:form>
	</ice:portlet>
</f:view>