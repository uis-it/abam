<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE faces-config PUBLIC "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN" "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config xmlns="http://java.sun.com/JSF/Configuration">

	<application>
		<locale-config>
			<default-locale>nb_NO</default-locale>
			<supported-locale>en_GB</supported-locale>
			<supported-locale>nb_NO</supported-locale>
		</locale-config>
		<message-bundle>Language_nb</message-bundle>
		<view-handler>no.uis.portal.util.LiferayViewHandler</view-handler>
	</application>
	<factory>
		<faces-context-factory>com.icesoft.faces.context.FacesContextFactoryImpl</faces-context-factory>
	</factory>
	<navigation-rule>
		<navigation-case>
			<from-outcome>createAssignment</from-outcome>
			<to-view-id>/createAssignment.jspx</to-view-id>
		</navigation-case>
	<navigation-case>
			<from-outcome>availableAssignment</from-outcome>
			<to-view-id>/availableAssignment.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>applyForAssignment</from-outcome>
			<to-view-id>/applyForAssignment.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>acceptAssignment</from-outcome>
			<to-view-id>/acceptAssignment.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>myAssignment</from-outcome>
			<to-view-id>/myAssignment.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>searchArchive</from-outcome>
			<to-view-id>/searchArchive.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>backToView</from-outcome>
			<to-view-id>/view.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>assignmentSummary</from-outcome>
			<to-view-id>/assignmentSummary.jspx</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>assignmentSavedConfirmation</from-outcome>
			<to-view-id>/assignmentSavedConfirmation.jspx</to-view-id>
		</navigation-case>
		</navigation-rule>
	
	<managed-bean>
		<managed-bean-name>studentService</managed-bean-name>
		<managed-bean-class>no.uis.portal.student.StudentServiceImpl</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>assignmentBean</managed-bean-name>
		<managed-bean-class>no.uis.portal.student.StudentAssignmentBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>studentService</property-name>
			<value>#{studentService}</value>
		</managed-property>
	</managed-bean>
</faces-config>